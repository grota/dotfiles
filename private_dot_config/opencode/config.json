{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "small_model": "openai/gpt-4.1-mini",
  "autoshare": false,
  "autoupdate": false,
  "provider": {
    "openrouter": {
      "models": {
        "@preset/kimi-k2-on-groq": {
          "options": {
            "max_tokens": 16384
          }
        },
        "qwen/qwen3-coder": {
          "options": {
            "provider": {
              "only": ["cerebras"]
            }
          }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  }
}

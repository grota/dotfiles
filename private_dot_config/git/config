[core]
  excludesfile = ~/.global_gitignore
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[color "diff"]
  meta = "yellow"
  frag = magenta
